{
  "name": "@devops-ia/kafka-cruise-control",
  "version": "1.0.0",
  "description": "GitHub Action for Cruise Control",
  "author": "ialejandro <hello@ialejandro.rocks>",
  "homepage": "https://github.com/devops-ia/kafka-cruise-control",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "kafka-cruise-control",
    "action"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devops-ia/kafka-cruise-control/issues"
  },
  "release": {
    "tagFormat": "v${version}",
    "plugins": [
      "@semantic-release/commit-analyzer",
